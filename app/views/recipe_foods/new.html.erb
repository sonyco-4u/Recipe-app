<div class="card">
  <div class="food-title">
    <h1>Add to my shopping list...</h1>
  </div>

  <%= form_with model: recipe_recipe_foods_path(params[:recipe_id]), data: { turbo: false }, scope: :recipe_foods, class: "food-form" do |form| %>
    <section class="text-box d-flex">
      <%= form.label "list of ingredients", class: "unit-label" %>
      <%= form.select :food_id, @foods.collect { |food| [food.name, food.id] }, class: "full-width", placecholder: "Select ingredients", required: true %>
    </section>
    <div class="input textarea mt-3">
      <%= form.label :quantity %>
      <%= form.text_field :qauntity, class: "form-control", required: true %>
    </div>
    <div class="submit mt-3">
      <%= form.submit "submit", class: "signupbtn" %>
    </div>
  <% end %>
</div>