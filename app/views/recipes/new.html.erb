<div class="card">
  <div class="food-title">
    <h1>My New Recipe</h1>
  </div>
  <%= form_with model: @recipes, url:recipes_path, scope: :recipe, method: :post, data: { turbo: false }, class: "food-form" do |form| %>
    <div class="input textarea">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="input textarea mt-3">
      <%= form.label :preparation_time %>
      <%= form.text_field :preparation_time, class: "form-control" %>
    </div>
    <div class="input textarea mt-3">
      <%= form.label :cooking_time %>
      <%= form.text_field :price, class: "form-control" %>
    </div>
    <div class="input textarea mt-3">
      <%= form.label :how_to.. %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="field-recipe d-flex">
      <%= form.check_box :public, class:"checkbox" %><br />
      <%= form.label "Public" %>
    </div>
    <div>
    <div class="submit mt-3">
      <%= form.submit "submit" %>
    </div>
  <% end %>
</div>