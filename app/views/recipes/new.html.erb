<div class="card">
  <div class="food-title">
    <h1>My New Recipe</h1>
  </div>
  <%= form_with model: @recipes, url:recipes_path, scope: :recipe, method: :post, data: { turbo: false }, class: "food-form" do |form| %>
    <div class="input textarea">
      <%= form.label :name %>
      <%= form.text_field :name, placeholder: "name of the food", class: "form-control" %>
    </div>
    <div class="input textarea mt-3">
      <%= form.label :preparation_time %>
      <%= form.text_field :preparation_time, placeholder: "How long does it take prepare?", class: "form-control" %>
    </div>
    <div class="input textarea mt-3">
      <%= form.label :cooking_time %>
      <%= form.text_field :cooking_time, placeholder: "How long to cook?", class: "form-control" %>
    </div>
    <div class="input textarea mt-3">
      <%= form.label :how_to.. %>
      <%= form.text_area :description, placeholder: "Steps to follow", class: "form-control" %>
    </div>
    <div class="form-check form-switch mt-3">
      <%= form.check_box :public, class:"form-check-input", type: "checkbox", id: "flexSwitchCheckDefault" %>
      <%= form.label "Public", class: "form-check-label", for: "flexSwitchCheckDefault" %>
      <%= form.label "Public" %>
    </div>
    <div>
    <div class="submit mt-3">
      <%= form.submit "submit", class:"signupbtn" %>
    </div>
  <% end %>
</div>